---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";
import World from "../components/World.astro";
---

<Layout title="Welcome to Astro.">
  <header class="text-center mt-4 px-3">
    <img
      src="https://raw.githubusercontent.com/GreenSoap/cfn-tracker/gui/build/appicon.png"
      class="w-full max-w-[300px] mx-auto"
    />
    <h1>
      <span class="text-gradient">CFN</span> Tracker
      <svg
        class="w-8 h-8 text-[#ff938e] inline"
        xmlns="http://www.w3.org/2000/svg"
        width="512"
        height="512"
        viewBox="0 0 512 512"
        ><path
          fill="currentColor"
          d="M333.78 20.188c-39.97 0-79.96 15.212-110.405 45.656c-58.667 58.667-60.796 152.72-6.406 213.97l-15.782 15.748l13.25 13.25l15.75-15.78c61.248 54.39 155.3 52.26 213.968-6.407c60.887-60.886 60.888-159.894 0-220.78C413.713 35.4 373.753 20.187 333.78 20.187zm0 18.562c35.15 0 70.285 13.44 97.158 40.313c53.745 53.745 53.744 140.6 0 194.343c-51.526 51.526-133.46 53.643-187.5 6.375l.218-.217c-2.35-2.05-4.668-4.17-6.906-6.407c-2.207-2.206-4.288-4.496-6.313-6.812l-.218.22c-47.27-54.04-45.152-135.976 6.374-187.502C263.467 52.19 298.63 38.75 333.78 38.75zm0 18.813c-30.31 0-60.63 11.6-83.81 34.78c-46.362 46.362-46.362 121.234 0 167.594c10.14 10.142 21.632 18.077 33.905 23.782c-24.91-19.087-40.97-49.133-40.97-82.94c0-15.323 3.292-29.888 9.22-43c-4.165 20.485.44 40.88 14.47 54.907c24.583 24.585 68.744 20.318 98.624-9.562c29.88-29.88 34.146-74.04 9.56-98.625a52.379 52.379 0 0 0-7.655-6.313c45.13 8.648 79.954 46.345 84.25 92.876c4.44-35.07-6.82-71.726-33.813-98.72c-23.18-23.18-53.47-34.78-83.78-34.78zM176.907 297.688L42.094 432.5l34.562 34.563L211.47 332.25l-34.564-34.563zM40 456.813L24 472.78L37.22 486l15.968-16L40 456.812z"
        ></path></svg
      >
    </h1>
    <h2 class="text-xl">
      Track any Street Fighter V CFN profile for its live match data
    </h2>
  </header>

  <main class='pb-8'>
    <div class='fixed bottom-0 w-full py-4 bg-black text-center'>
      If you find the tool useful for your streams or otherwise, consider <a href='https://ko-fi.com/greensoap' class='text-[#8ee5ff] hover:underline' target='_blank'>buying me a coffee â˜•</a>
    </div>
    <section class="grid gap-6 mt-6 max-w-[60ch] mx-auto">
      <a
        href="https://github.com/GreenSoap/cfn-tracker/releases/download/v2.0.0/CFN_Tracker.exe"
        class="link-card windows flex gap-2 justify-between items-center rounded-full px-6 py-4 text-3xl w-full"
      >
        <Icon name="el:download-alt" class="w-8 h-8" />
        Download for Windows
      </a>
      <a
        href="https://github.com/GreenSoap/cfn-tracker/releases/download/v2.0.0/cfn_tracker_macos_amd64"
        class="link-card mac flex gap-2 justify-between items-center rounded-full px-6 py-4 text-3xl w-full"
      >
        <Icon name="el:download-alt" class="w-8 h-8" />
        Download for Mac
      </a>

      <div class='pt-6 justify-center flex gap-11 flex-wrap'>
        <a class='text-lg flex gap-4 hover:underline' href='https://github.com/GreenSoap/cfn-tracker/' target='_blank'><Icon name='mdi:github' class='w-8 h-8'/> Source</a>
        <a class='flex gap-4 hover:underline' href='https://twitter.com/greensoap_' target='_blank'><Icon name='mdi:twitter' class='w-8 h-8 text-[#8ee5ff]'/> greensoap_</a>  
      </div>
    </section>

    <section class="pb-12">
      <h2 class="text-center text-3xl mt-32 mb-16">Screenshots</h2>
      <div class="flex flex-wrap gap-4 justify-around">
        <img
          class="w-full max-w-[620px]"
          src="https://raw.githubusercontent.com/GreenSoap/cfn-tracker/gui/showcase/tracking.jpg"
        />
        <img
          class="w-full max-w-[620px]"
          src="https://raw.githubusercontent.com/GreenSoap/cfn-tracker/gui/showcase/log.jpg"
        />
        <img
          class="w-full max-w-[620px]"
          src="https://raw.githubusercontent.com/GreenSoap/cfn-tracker/gui/showcase/stream-example-2.gif"
        />
      </div>
    </section>
  </main>
  <World/>
</Layout>

<style>
  main {
    margin: auto;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }

  .text-gradient {
    background-image: linear-gradient(45deg, #ff938e, gold);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .link-card {
    background-color: rgba(0,0,0,0.5);
    backdrop-filter: blur(5px);
    background-image: none;
    background-size: 400%;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }

  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
  }

  .windows {
    --accent-gradient: linear-gradient(
      45deg,
      rgb(124, 58, 237),
      #627ada 30%,
      rgba(0,0,0,0.75) 60%
    );
  }
  
  .mac {
    --accent-gradient: linear-gradient(
      45deg,
      #fb5b5b,
      #ff938e 30%,
      rgba(0,0,0,0.75) 60%
    );
  }
</style>
